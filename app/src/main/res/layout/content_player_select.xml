<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".interfaces.player.PlayerSelectActivity"
    tools:showIn="@layout/activity_player_select">

    <com.woxthebox.draglistview.BoardView
        android:id="@+id/playerselect_dragboard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="90">


    </com.woxthebox.draglistview.BoardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:onClick="onClickReturnClick"
        android:text="@string/player_select_return" />
</LinearLayout>